  <ul class="list-group">
    <% for(var i=0; i < posts.length; i++){ %>
      <li class="list-group-item">
        <p>글 번호 : <%= posts[i]._id %></p>
        <h4>할일 제목 : <%= posts[i].제목 %></h4>
        <p>할일 마감일 : <%= posts[i].날짜 %></p>
        <!-- 삭제를 위한 버튼 -->
        <button type="button" class="btn btn-danger delete" data-id="<%= posts[i]._id %>"> 삭제 </button>
      </li>
      <% } %>
  </ul>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>


  <!-- ajax를 이용한 삭제 -->
  <script>
    // class가 'delete'인 것이 클릭되면 실행
    $('.delete').click(function(e) {
      // 글번호 : 내가 누른 요소의 data-id
      var listNum = e.target.dataset.id;

      // DELEET 명령 실행
      $.ajax({
        method: 'DELETE',
        url: '/delete',  // 저장할 경로
        data: {_id : listNum } // 경로에 같이 보낼 데이터
      }).done(function (result) {
        // AJAX 성공시 실행할 코드는 여기
      })
    });


  </script>

